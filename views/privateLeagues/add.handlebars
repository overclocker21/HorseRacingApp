<main role="main" class="flex-shrink-0">

    <div class="container">

        <h3 class="text-center mt-3 mb-0 page-title">Add Private League</h3>

        <form class="mt-5" action="/privateleagues" method="POST">

            <div class="form-row">
                <div class="form-group col-md-4">
                    <!-- empty -->
                </div>

                <div class="form-group col-md-4 text-center">
                    <label for="privateTitle">League name</label>
                    <input type="text" class="league-form text-center league-form-lg" name="privateTitle" required>
                </div>

                <div class="form-group col-md-4">
                    <!-- empty -->
                </div>
            </div>

            <div class="form-row mt-3">

                <div class="form-group col-md-4">
                    <label for="numOfRaces">Number of races</label>
                    <input type="number" class="league-form" name="numOfRaces" required>
                </div>

                <div class="form-group col-md-4">
                    <label for="numOfPlayers">Number of players</label>
                    <input type="number" class="league-form" name="numOfPlayers" required>
                </div>

                <div class="form-group col-md-4">
                    <label for="numOfHorses">Number of horses</label>
                    <input type="number" class="league-form" name="numOfHorses" required>
                </div>

            </div>


            <div class="form-row mt-3">

                <div class="form-group col-md-4">
                    <label for="typeOfHorses">Type of horses</label>
                    <select class="league-form" name="typeOfHorses" required>
                        <option value="thoroughbred">Thoroughbred</option>
                        <option value="standardbred">Standardbred</option>
                    </select>
                </div>

                <div class="form-group col-md-4">

                    <label for="startDate">Select start date:</label>
                    <div>
                        <input class="league-form" type="date" name="startDate" value="2019-01-19" required>
                    </div>


                </div>

                <div class="form-group col-md-4">

                    <label for="endDate">Select end date:</label>
                    <div>
                        <input class="league-form" type="date" name="endDate" value="2019-01-19" required>
                    </div>
                </div>

            </div>

            <p class="text-center mt-3">

                <button type="submit" class="btn btn-warning">Create</button>
            </p>

        </form>
    </div>
</main>