<main role="main">

    <div class="container pt-3">
        <div class="row">

            <!-- Open Leagues -->

            <div class="col-md-6 mx-auto">

                <!-- Open Leagues -->
                <div class="row rounded-top mx-0 my-0 pl-3 py-2 green-3">
                    <div class="col p-0">
                        <h5 class="mt-1 mb-0 ">All Participants</h5>
                    </div>


                </div>

                <div class="list-group list-group-flush">

                    {{#each league.participants}}

                    <a href="#" class="list-group-item list-group-item-action list-group-item-leagues">
                        <div class="media">
                            <img src="{{pictureURL}}" class="mr-3" alt="" height="100">
                            <div class="media-body">
                                <div class="d-flex justify-content-between align-items-center w-100">
                                    <strong class="text-gray-dark">{{firstName}} {{lastName}}</strong>
                                </div>
                            </div>
                        </div>
                    </a>
                    {{else}}
                    <div class="list-group mt-1 shadow-sm rounded">
                        <a href="#" class="list-group-item list-group-item-action list-group-item-leagues">
                            <h5 class="text-center noleagues_v2 ">At the moment none joined the league</h5>
                        </a>
                    </div>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>

</main>